<form method="post" action="/classifiers">
  <div class="form-group">
    <label for="classifier_type">Select Classifier Type:</label>
    <select id="classifier_type" name="classifier_type" required>
      <option value="">-- Select a classifier --</option>
      <% @classifier_types.each do |name, value| %>
        <option value="<%= value %>" <%= 'selected' if @classifier_type == value %>><%= name %></option>
      <% end %>
    </select>
    <small style="color: #666;">Choose the type of reference data you need</small>
  </div>
  
  <button type="submit">Get Classifier Data</button>
</form>

